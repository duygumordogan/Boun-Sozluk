                        <label asp-for="BounSozlukUserId" class="control-label"></label>
                        <input asp-for="BounSozlukUserId" class="form-control" />
                        <span asp-validation-for="BounSozlukUserId" class="text-danger"></span>
                    </div>*@
                @*<div class="form-group">
                        <label asp-for="PostId" class="control-label"></label>
                        <select asp-for="PostId" class="form-control" asp-items="ViewBag.PostId"></select>
                    </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
