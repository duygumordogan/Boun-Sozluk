@model BounSozluk.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<div id="main">
    <h1>@ViewBag.PostTitle</h1>

    <h4>Add your comments</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="PostId" value="@ViewBag.PostId" />
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" rows="7" cols="150"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
